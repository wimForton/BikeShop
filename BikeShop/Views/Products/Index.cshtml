@model IEnumerable<BikeShop.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<a class="btn btn-primary" asp-area="" asp-controller="Products" asp-action="Index" asp-route-advancepage="-1">< Prev</a>
<a class="btn btn-primary" asp-area="" asp-controller="Products" asp-action="Index" asp-route-advancepage="1">Next ></a>
<p>page @ViewData["pagenumber"]</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = (int)ViewData["firstproduct"]; i < (int)ViewData["firstproduct"] + (int)ViewData["productsperpage"]; i++)
        {
            List<Product> myproducts = Model.ToList();
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => myproducts[i].Name)
                </td>
                <td>
                    <img src="@myproducts[i].Imagepath" alt="@myproducts[i].Name" width="150" height="150">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => myproducts[i].Price)
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@myproducts[i].Id" class="btn btn-primary">Buy!</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@myproducts[i].Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@myproducts[i].Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@myproducts[i].Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
