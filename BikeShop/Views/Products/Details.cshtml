@model BikeShop.Models.ProductModel

@{
    ViewData["Title"] = "Details";
}

<h1>Product Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <img src="@Model.Imagepath" alt="@Model.Name" width="150" height="150">
        </dt>
        <dd class="col-sm-10">
            <img src="~/@Model.Imagepath" alt="@Model.Name" width="150" height="150">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        @foreach (var discountItem in Model.Discounts)
        {
            <dd>If you buy: @discountItem.MinimumPurchase items discount is: @discountItem.DiscountPercentage percent</dd>
        }
        <dd></dd>
    </dl>
    @using (Html.BeginForm("AddItem", "ShoppingBags"))@*no customer id since we use the customer that's currently logged in'*@
    {
                <input type="number" name="myQuantity" value="@ViewData["quantity"]"/>
                <input type="hidden" name="myProductId" value="@Model.Id"/>
                <input type="submit" value="Buy!"/>
            }
    @*@Html.ActionLink("Buy!", "AddItem", "ShoppingBags", new { myProductId = Model.Id, myCustomerId = ViewBag.customerId, myQuantity = ViewBag.quantity }, new { @class = "btn btn-primary" })*@
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
