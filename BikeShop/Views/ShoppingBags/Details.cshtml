@model BikeShop.Models.ShoppingBagModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ShoppingBag</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentityUser.UserName)
        </dt>
    </dl>
    <table class="table">
        @foreach (ShoppingItemModel ShoppingBagItem in Model.myShoppingItems)
        {
        <tr>
            <td>Product: </td>
            <td>@ShoppingBagItem.myProduct.Name</td>
            <td>@ShoppingBagItem.myProduct.Imagepath</td>
            <td>Price: </td>
            <td>@ShoppingBagItem.myProduct.Price</td>
            <td>Quantity: </td>
            <td>@ShoppingBagItem.Quantity</td>
            @foreach (var discountItem in ShoppingBagItem.myProduct.Discounts)
            {
                <td>If you buy: @discountItem.MinimumPurchase items discount is: @discountItem.DiscountPercentage percent</td>
            }

            <td>Total: </td>
            <td>@(ShoppingBagItem.Quantity * ShoppingBagItem.myProduct.Price)</td>
            <td><a class="btn btn-primary" asp-controller="ShoppingBags" asp-action="RemoveItem" asp-route-myItemId="@ShoppingBagItem.Id" asp-route-myShoppingBagId="@Model.Id">Remove</a></td>

        </tr>
        }
    </table>
</div>
<div>
    <a class="btn btn-primary" asp-controller="Account" asp-action="Details" asp-route-id="@Model.IdentityUserId">Back</a>
</div>
