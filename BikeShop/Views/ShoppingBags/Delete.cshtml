@model BikeShop.Models.ShoppingBag

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ShoppingBag</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.myCustomer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.myCustomer.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" /><!--form wordt opgevuld met parameters-->
        <input type="hidden" asp-for="myCustomerId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <!--<a asp-action="Index">Back to List</a>-->
    </form>
    <form asp-action="Back">
        <input type="hidden" asp-for="myCustomerId" /><!--form wordt opgevuld met parameters-->
        <input type="submit" value="Back" class="btn btn-danger" />
    </form>
</div>
