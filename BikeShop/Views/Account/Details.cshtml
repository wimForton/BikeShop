@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.UserName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<p>Shoppingbags</p>
<a class="nav-link text-dark" asp-area="" asp-controller="ShoppingBags" asp-action="Create" asp-route-userName="@Model.UserName">Add shoppingbag</a>
<table class="table">
    <tbody>
        @foreach (ShoppingBagModel item in ViewData["shoppingBags"] as List<ShoppingBagModel>)
        {
            <tr>
                <td>
                    @item.Date
                </td>
                <td>
                    <a class="btn btn-primary" asp-area="" asp-controller="ShoppingBags" asp-action="Details" asp-route-id="@item.Id">Check shoppingbag</a>
                </td>
                <td>
                    <a class="btn btn-primary" asp-area="" asp-controller="ShoppingBags" asp-action="Delete" asp-route-id="@item.Id">Delete shoppingbag</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
